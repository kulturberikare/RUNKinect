<Window x:Class="KinectSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="960" Width="1280" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="150*"/>                     
        </Grid.ColumnDefinitions>
        
        <Menu x:Name="HeadMenu" IsMainMenu="True" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <MenuItem Header="_File" />
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
       
        <StackPanel x:Name="LabelPanel" Background="GreenYellow" Grid.Column="0" 
                    Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label Foreground="Red" FontSize="30" FontFamily="Comic Sans MS, Verdana"
                   Content="The Freaking Awesome App Of Pure Awesomeness" HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="ImageIn3D" Background="Cyan" Grid.Row="2" Grid.Column="1"
                    Grid.RowSpan="3">
            
        </StackPanel>
        <StackPanel x:Name="Camera1" Background="Red" Grid.Row="2" Grid.Column="0" />
        <StackPanel x:Name="Camera2" Background="Red" Grid.Row="2" Grid.Column="2" />
        <StackPanel x:Name="Pulse" Background="Aquamarine" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4"/>
        <StackPanel x:Name="Buttons" Background="DarkGreen" Grid.Row="5" Grid.Column="1" >
            <Button x:Name="Back" Content="Back" Background="AliceBlue" Height="24" Margin="0,0,0,0" Width="35"
                    VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Button x:Name="Play" Content="Play" Background="AliceBlue" Height="24" Margin="40,-24,0,0" Width="35" 
                    VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Button x:Name="Forward" Content="Forward" Background="AliceBlue" Height="24" Margin="80,-24,0,0" Width="35" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button x:Name="Record" Content="Rec" Background="AliceBlue" Height="24" Margin="120,-24,0,0" Width="35"
                    HorizontalAlignment="Left" VerticalAlignment="Top" />
        </StackPanel>
        <StackPanel x:Name="Button1" Background="GreenYellow" Grid.Row="3" Grid.Column="0" />
        <StackPanel x:Name="Button2" Background="GreenYellow" Grid.Row="3" Grid.Column="2" />
        <StackPanel x:Name="Info1" Background="Yellow" Grid.Row="4" Grid.RowSpan="2" Grid.Column="0" />
        <StackPanel x:Name="Info2" Background="Yellow" Grid.Row="4" Grid.RowSpan="2" Grid.Column="2" />
        <StackPanel x:Name="Data1" Background="Wheat" Grid.Row="2" Grid.Column="3" />
        <StackPanel x:Name="Dataset1" Background="Blue" Grid.Row="3" Grid.Column="3" />
        <StackPanel x:Name="Data2" Background="Wheat" Grid.Row="4" Grid.Column="3" />
        <StackPanel x:Name="Dataset2" Background="Blue" Grid.Row="5" Grid.Column="3" />
    </Grid>
</Window>
