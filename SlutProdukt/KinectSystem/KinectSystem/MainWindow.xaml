<Window x:Class="KinectSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="960" Width="1280" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="150*"/>                     
        </Grid.ColumnDefinitions>
        
        <Menu x:Name="HeadMenu" IsMainMenu="True" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <MenuItem Header="_File" />
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
       
        <StackPanel x:Name="LabelPanel" Background="GreenYellow" Grid.Column="0" 
                    Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label Foreground="Red" FontSize="30" FontFamily="Comic Sans MS, Verdana"
                   Content="The Freaking Awesome App Of Pure Awesomeness" HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="ImageIn3D" Background="Cyan" Grid.Row="2" Grid.Column="1"
                    Grid.RowSpan="3">
            <Viewport3D x:Name="viewPort" Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ModelVisual3D x:Name="SkeletonModel">
                    <ModelVisual3D.Content>
                        <Model3DGroup x:Name="SkeletonModelGroup">
                            <AmbientLight Color="Gray"/>
                            <DirectionalLight Color="Gray" Direction="-1, -3, -2"/>
                            <DirectionalLight Color="AliceBlue" Direction="1, -2, 3"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="SkeletonCamera" FarPlaneDistance="5000" NearPlaneDistance="100"
                                       LookDirection="0,0,1" UpDirection="0,-1,0" Position="120,110,-1000" FieldOfView="10" />
                </Viewport3D.Camera>
            </Viewport3D>
        </StackPanel>
        <StackPanel x:Name="Camera1" Background="Red" Grid.Row="2" Grid.Column="0">
            <Image x:Name="SightImageOne"/>
        </StackPanel>
        <StackPanel x:Name="Camera2" Background="Red" Grid.Row="2" Grid.Column="2">
            <Image x:Name="SightImageTwo"/>
        </StackPanel>
        <StackPanel x:Name="Pulse" Background="Aquamarine" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4"/>
        <StackPanel x:Name="Buttons" Background="DarkGreen" Grid.Row="5" Grid.Column="1" >
            <Button x:Name="Back" Content="Back" Background="AliceBlue" Height="24" Margin="3,3,0,0" Width="55"
                    VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Button x:Name="Play" Content="Play" Background="AliceBlue" Height="24" Margin="63,-24,0,0" Width="55" 
                    VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Button x:Name="Forward" Content="Forward" Background="AliceBlue" Height="24" Margin="123,-24,0,0" Width="55" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button x:Name="Record" Content="Rec" Background="AliceBlue" Height="24" Margin="183,-24,0,0" Width="55"
                    HorizontalAlignment="Left" VerticalAlignment="Top" />
        </StackPanel>
        <StackPanel x:Name="Button1" Background="GreenYellow" Grid.Row="3" Grid.Column="0" >
            <Button x:Name="Depth1" Background="AliceBlue" Content="Depth" Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left" Click="StartDepthImageOne"/>
            <Button x:Name="Colour1" Background="AliceBlue" Content="Colour" Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left" Click="StartColorImageOne"/>
            <ToggleButton Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left" Background="AliceBlue" >
                <CheckBox x:Name="Skeleton1" Content="Skeleton" Checked="Skeleton1_Checked" Background="AliceBlue" Width="70" Height="22" HorizontalAlignment="Left" />
            </ToggleButton>
            <Button x:Name="AngleUpp1" Background="AliceBlue" Content="Angle +" Width="60" Height="27" Margin="0,-100,10,0" HorizontalAlignment="Right" />
            <Button x:Name="AngleDown1" Background="AliceBlue" Content="Angle -" Width="60" Height="27" Margin="0,-33,10,0" HorizontalAlignment="Right" />
        </StackPanel>
        <StackPanel x:Name="Button2" Background="GreenYellow" Grid.Row="3" Grid.Column="2">
            <Button x:Name="Depth2" Background="AliceBlue" Content="Depth" Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left"/>
            <Button x:Name="Colour2" Background="AliceBlue" Content="Colour" Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left"/>
            <ToggleButton Width="70" Height="22" Margin="7,5,0,0" HorizontalAlignment="Left" Background="AliceBlue" >
                <CheckBox x:Name="Skeleton2" Content="Skeleton" Checked="Skeleton2_Checked" Background="AliceBlue" Width="70" Height="22" HorizontalAlignment="Left" />
            </ToggleButton>
            <Button x:Name="AngleUpp2" Background="AliceBlue" Content="Angle +" Width="60" Height="27" Margin="0,-100,10,0" HorizontalAlignment="Right" />
            <Button x:Name="AngleDown2" Background="AliceBlue" Content="Angle -" Width="60" Height="27" Margin="0,-33,10,0" HorizontalAlignment="Right" />
        </StackPanel>
        <StackPanel x:Name="Data1" Background="Yellow" Grid.Row="4" Grid.RowSpan="2" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Connection ID:" Grid.Row="0" Grid.Column="0" Margin="-2,0,2,0"/>
                <TextBlock Text="{Binding ConectionIDOne}" Grid.Row="0" Grid.Column="1"/>
                <TextBlock Text="Uniqe Device ID:" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="{Binding DeviceIDOne}" Grid.Row="1" Grid.Column="1"/>
                <TextBlock Text="Status:" Grid.Row="2" Grid.Column="0"/>
                <TextBlock Text="{Binding SensorstatusOne}" Grid.Row="2" Grid.Column="1"/>
                <TextBlock Text="Color Stream:" Grid.Row="3" Grid.Column="0"/>
                <TextBlock Text="{Binding IsColorStreamEnabledOne}" Grid.Row="3" Grid.Column="1"/>
                <TextBlock Text="Depth Stream:" Grid.Row="4" Grid.Column="0"/>
                <TextBlock Text="{Binding IsDepthStreamEnabledOne}" Grid.Row="4" Grid.Column="1"/>
                <TextBlock Text="Skeleton Stream:" Grid.Row="5" Grid.Column="0"/>
                <TextBlock Text="{Binding IsSkeletonStreamEnabledOne}" Grid.Row="5" Grid.Column="1"/>
                <TextBlock Text="Sensor Angle:" Grid.Row="6" Grid.Column="0"/>
                <TextBlock Text="{Binding SensorAngleOne}" Grid.Row="6" Grid.Column="1"/>
            </Grid>
        </StackPanel>
        <StackPanel x:Name="Data2" Background="Yellow" Grid.Row="4" Grid.RowSpan="2" Grid.Column="2" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Connection ID:" Grid.Row="0" Grid.Column="0" Margin="-2,0,2,0"/>
                <TextBlock Text="{Binding ConectionIDTwo}" Grid.Row="0" Grid.Column="1"/>
                <TextBlock Text="Uniqe Device ID:" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="{Binding DeviceIDTwo}" Grid.Row="1" Grid.Column="1"/>
                <TextBlock Text="Status:" Grid.Row="2" Grid.Column="0"/>
                <TextBlock Text="{Binding SensorstatusTwo}" Grid.Row="2" Grid.Column="1"/>
                <TextBlock Text="Color Stream:" Grid.Row="3" Grid.Column="0"/>
                <TextBlock Text="{Binding IsColorStreamEnabledTwo}" Grid.Row="3" Grid.Column="1"/>
                <TextBlock Text="Depth Stream:" Grid.Row="4" Grid.Column="0"/>
                <TextBlock Text="{Binding IsDepthStreamEnabledTwo}" Grid.Row="4" Grid.Column="1"/>
                <TextBlock Text="Skeleton Stream:" Grid.Row="5" Grid.Column="0"/>
                <TextBlock Text="{Binding IsSkeletonStreamEnabledTwo}" Grid.Row="5" Grid.Column="1"/>
                <TextBlock Text="Sensor Angle:" Grid.Row="6" Grid.Column="0"/>
                <TextBlock Text="{Binding SensorAngleTwo}" Grid.Row="6" Grid.Column="1"/>
            </Grid>
        </StackPanel>
        <StackPanel x:Name="Info1" Background="Wheat" Grid.Row="2" Grid.Column="3" />
        <StackPanel x:Name="Infoset1" Background="Blue" Grid.Row="3" Grid.Column="3">
            <Label Name="InfoLabel1" Content="Label1" Background="Wheat" Width="250" Height="30" HorizontalAlignment="Left" 
                   Margin="3,3,0,0"/>
            <Button Name="BrowseButton1" Content="Browse" Width="90" Height="30" HorizontalAlignment="Right"
                    Margin="0,-30,10,0" Click="BrowseButton1_Click" />
        </StackPanel>
        <StackPanel x:Name="Info2" Background="Wheat" Grid.Row="4" Grid.Column="3" />
        <StackPanel x:Name="Infoset2" Background="Blue" Grid.Row="5" Grid.Column="3">
            <Label Name="InfoLabel2" Content="Label1" Background="Wheat" Width="250" Height="30" HorizontalAlignment="Left" 
                   Margin="3,3,0,0"/>
            <Button Name="BrowseButton2" Content="Browse" Width="90" Height="30" HorizontalAlignment="Right"
                    Margin="0,-30,10,0" Click="BrowseButton2_Click" />
        </StackPanel>
    </Grid>
</Window>
