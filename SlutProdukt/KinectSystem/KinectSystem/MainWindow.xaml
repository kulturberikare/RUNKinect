<Window x:Class="KinectSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="960" Width="1280" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="100*"/>            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="150*"/>                     
        </Grid.ColumnDefinitions>
        
        <Menu x:Name="HeadMenu" IsMainMenu="True" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <MenuItem Header="_File" />
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
       
        <StackPanel x:Name="LabelPanel" Background="GreenYellow" Grid.Column="0" 
                    Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label Foreground="Red" FontSize="30" FontFamily="Comic Sans MS, Verdana"
                   Content="The Freaking Awesome App Of Pure Awesomeness" HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="ImageIn3D" Background="Cyan" Grid.Row="2" Grid.Column="1"
                    Grid.RowSpan="3">
            
        </StackPanel>
    </Grid>
</Window>
